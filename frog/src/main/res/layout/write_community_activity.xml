<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteActivity">


        <EditText
            android:id="@+id/community_ssul_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:maxLength="18"
            android:ellipsize="end"
            android:hint="@string/title_plz"/>

        <EditText
            android:id="@+id/community_ssul_context"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:hint="@string/context_plz"
            android:gravity="top"
            android:inputType="text" />

        <ImageView
            android:id="@+id/community_ssul_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_add_a_photo"
            android:padding="60dp"
            android:scaleType="center"
            android:background="@color/colorLightGray"/>

        <Button
            android:id="@+id/community_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sharing"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"
            android:textStyle="bold" />
</LinearLayout>